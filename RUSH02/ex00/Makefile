# ğŸ“ Directorios
SRC_DIR := src
INC_DIR := include
DAT_DIR := data
OBJ_DIR := obj

# ğŸ“¦ Archivos fuente y objeto
SRCS := $(wildcard $(SRC_DIR)/*.c)
OBJS := $(SRCS:$(SRC_DIR)/%.c=$(OBJ_DIR)/%.o)
TARGET := rush-02
DICT_FILE := $(DAT_DIR)/numbers.dict

# ğŸ”§ Compilador y banderas
CC := gcc
CFLAGS := -Wall -I$(INC_DIR)

# ğŸ¯ Regla principal
all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(OBJS) -o $@

# ğŸ› ï¸ Compilar objetos en obj/
$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	@mkdir -p $(OBJ_DIR)
	$(CC) $(CFLAGS) -c $< -o $@

# ğŸ“‚ Validar diccionario
check-dict:
	@test -f $(DICT_FILE) || \
	(echo "âŒ Diccionario no encontrado en $(DICT_FILE)" && exit 1)

# ğŸš€ Ejecutar con diccionario
run: check-dict $(TARGET)
	./$(TARGET) $(DICT_FILE)

# ğŸ§¹ Limpieza
clean:
	rm -rf $(OBJ_DIR) $(TARGET)

fclean: clean
	@echo "ğŸ§¨ Limpieza total completada"
	
re: fclean all

# ğŸ”– Declarar phony targets
.PHONY: all clean check-dict run
